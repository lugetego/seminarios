{% extends 'base.html.twig' %}

{% block title %}Evento{% endblock %}

{% block body %}
    <h1>Evento</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ evento.id }}</td>
            </tr>
            <tr>
                <th>Lugar</th>
                <td>{{ evento.lugar }}</td>
            </tr>
            <tr>
                <th>Responsables</th>
                <td>{{ evento.responsables }}</td>
            </tr>
            <tr>
                <th>Fecha</th>
                <td>{{ evento.fecha ? evento.fecha|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Hora</th>
                <td>{{ evento.hora ? evento.hora|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Ponente</th>
                <td>{{ evento.ponente }}</td>
            </tr>
            <tr>
                <th>Origen</th>
                <td>{{ evento.origen }}</td>
            </tr>
            <tr>
                <th>Platica</th>
                <td>{{ evento.platica }}</td>
            </tr>
            <tr>
                <th>Resumen</th>
                <td>{{ evento.resumen }}</td>
            </tr>
            <tr>
                <th>Comentario</th>
                <td>{{ evento.comentario }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('evento_index') }}">back to list</a>

    <a href="{{ path('evento_edit', {'id': evento.id}) }}">edit</a>

    {{ include('evento/_delete_form.html.twig') }}
{% endblock %}
