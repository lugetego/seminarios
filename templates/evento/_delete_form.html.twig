<form method="post" action="{{ path('evento_delete', {'id': evento.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ evento.id) }}">
    <button class="btn btn-secondary mt-3"><i class="bi bi-trash"></i> Eliminar</button>
</form>
