{% extends 'base.html.twig' %}

{% block title %}Seminario{% endblock %}

{% block body %}
    <div class="container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('seminario_index') }}">Seminarios</a></li>
                <li class="breadcrumb-item active" aria-current="page">{{ seminario.nombre }}</li>
            </ol>
        </nav>
        <h3 class="mb-3">Informaci√≥n de seminario</h3>

        <div class="card" style="width: 48rem;">
            <div class="card-body">
                <h5 class="card-title"><a href="{{ path('seminario_edit', {'slug': seminario.slug}) }}"> <i class="bi bi-pencil"></i> {{ seminario.nombre }}</a></h5>
                <p class="card-text">
                    {{ seminario.lugar }}, {{ seminario.hora ? seminario.hora|date('H:i') : '' }}
                </p>
                <p class="card-text m-1">
                    {{ seminario.descripcion }}
                </p>

                {% for responsable in seminario.responsables %}
                    <i class="bi bi-person-square"></i> <a href="{{ path('responsable_show', { 'id': responsable.id }) }}">{{ responsable.nombre }} {{ responsable.apellidos }}</a><br>
                {% endfor %}
                {{ seminario.estatus ? '<i class="bi bi-toggle-on"></i> Activo' : '<i class="bi bi-toggle-off"></i> Inactivo' }}


            </div>
        </div>


        <div class="mt-3">
            <a href="#" class="btn btn-primary">Nuevo evento de este seminario</a>
        </div>

        {{ include('seminario/_delete_form.html.twig') }}
    </div>
{% endblock %}
